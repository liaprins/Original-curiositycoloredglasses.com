---
layout: none
---
[
  {% for post in site.posts %}
    {
      "title"    : "{{ post.title | strip_html | strip_newlines | escape }}",
      "tags"     : "{{ post.tags | join: ', ' }}",
      "excerpt"  : "{{ post.excerpt | strip_html | strip_newlines | escape }}",
      "url"      : "{{ site.baseurl }}{{ post.url }}",
      "date"     : "{{ post.date | date: '%d %B %Y' | escape }}",
      "bgimageleft" : "{{ site.url }}/assets/images/blogposts/{{ post.slug }}/-l-{{ post.slug }}.jpg",
      "bgimageright" : "{{ site.url }}/assets/images/blogposts/{{ post.slug }}/-r-{{ post.slug }}.jpg"
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]
